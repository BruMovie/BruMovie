<!--pages/around/index.wxml-->
<view class="my_orders">
  <view class="cinemaname">万达影城</view> 
  <view class="rowflex">
    <view class="order1" bindtap="showticketorder">
      <image class="img1" src="{{aroundpost}}"></image>
    </view>
    <view class="order2" bindtap="showticketorder">
      <text class="around">名称： {{aroundname}} </text>
      <text class="price">单价： {{aroundprice}} 元</text>
      <text class="number">数量： {{aroundnumber}} 件</text>
    </view>
  </view>
  <view class="total">总价: {{aroundtotal}} 元</view>
</view>

