
.scroll {
  height: 100%;
  box-sizing: border-box;
}

.title {
  height: 46rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  color: #999;
  padding-left: 30rpx;
  padding-top: 30rpx;
  margin-right: 30rpx;
}

.citys {
  display: flex;
  flex-flow: row wrap;
}

.spcity {
  margin: 16rpx 0 22rpx 22rpx;
  width: 150rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  text-align: center;
  border-radius: 35rpx;
  background-color: #f5f5f5;
}


.city {
  margin-right: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx #e5e5e5 solid;
}

.slibar {
  position: fixed;
  top:72px;
  right: 8rpx;
  color: #999;
  line-height: 30rpx;
  text-align: right;
}
.letter{
  flex: 1;
  display: block;
  font-size: 28rpx;
  color: #33B9FF;
  text-align: right;
  margin: 12rpx 0;
}
